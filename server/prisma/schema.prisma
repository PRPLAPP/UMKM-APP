datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum OrderStatus {
  pending
  processing
  completed
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int
  category    String
  createdAt   DateTime    @default(now())
  items       OrderItem[]
}

model Order {
  id            String      @id @default(uuid())
  customerName  String
  customerEmail String
  status        OrderStatus @default(pending)
  total         Float
  createdAt     DateTime    @default(now())
  items         OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}
