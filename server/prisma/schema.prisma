datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum OrderStatus {
  pending
  processing
  completed
}

enum UserRole {
  villager
  msme
  admin
}

enum MsmeStatus {
  pending
  approved
  rejected
}

enum NewsType {
  event
  business
  announcement
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int
  category    String
  createdAt   DateTime    @default(now())
  items       OrderItem[]
}

model Order {
  id            String      @id @default(uuid())
  customerName  String
  customerEmail String
  status        OrderStatus @default(pending)
  total         Float
  createdAt     DateTime    @default(now())
  items         OrderItem[]
  userId        String?
  user          User?       @relation(fields: [userId], references: [id])
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
}

model User {
  id           String    @id @default(uuid())
  name         String
  email        String    @unique
  passwordHash String
  role         UserRole  @default(msme)
  createdAt    DateTime  @default(now())
  orders       Order[]
  msmeProfile  MsmeProfile?
}

model MsmeProfile {
  id          String     @id @default(uuid())
  userId      String     @unique
  storeName   String
  category    String
  description String
  location    String
  distanceKm  Float
  rating      Float      @default(4.5)
  status      MsmeStatus @default(pending)
  createdAt   DateTime   @default(now())
  user        User       @relation(fields: [userId], references: [id])
}

model NewsItem {
  id          String    @id @default(uuid())
  title       String
  summary     String
  type        NewsType
  publishedAt DateTime  @default(now())
  createdAt   DateTime  @default(now())
}

model TourismSpot {
  id          String   @id @default(uuid())
  name        String
  description String
  imageUrl    String
  location    String
  createdAt   DateTime @default(now())
}
